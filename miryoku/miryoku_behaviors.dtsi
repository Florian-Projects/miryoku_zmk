/ {
  behaviors {
    u_mt: u_mt {
      compatible = "zmk,behavior-hold-tap";
      label = "u_mt";
      #binding-cells = <2>;
      tapping_term_ms = <U_TAPPING_TERM>;
      flavor = "tap-preferred";
      bindings = <&kp>, <&kp>;
    };
    u_lt: u_lt {
      compatible = "zmk,behavior-hold-tap";
      label = "u_lt";
      #binding-cells = <2>;
      tapping_term_ms = <U_TAPPING_TERM>;
      flavor = "tap-preferred";
      bindings = <&mo>, <&kp>;
    };
    behaviors {
        incl: inverted_colon {
            compatible = "zmk,behavior-mod-morph";
            label = "INVERT_COLON";
            #binding-cells = <0>;
            bindings = <&kp COLON>, <&kp SEMI>;
            mods = <(MOD_LSFT|MOD_RSFT)>;
        };
    };
    behaviors {
        incl: german_s {
            compatible = "zmk,behavior-mod-morph";
            label = "GERMAN_S";
            #binding-cells = <0>;
            bindings = <&kp S>, <&macro_tap &kp MOD_RALT &kp S &kp S>;
            mods = <(MOD_RALT)>,<(MOD_LCTL|MOD_RCTL)>;
            keep-mods = <(MOD_RALT);
        };
    };
  };
};